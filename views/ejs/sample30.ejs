<div class="content_top">
    <div class="cont_tit">テンプレート管理</div>
    <div class="div">
        <button class="btn_fullscreen_off"></button>
        <button class="btn_fullscreen_on"></button>
        <button id="btnSave" class="btn_search">
            <span>貯蔵</span>
        </button>
        <button id="btnGrid" class="btn_search">
            <span>目録</span>
        </button>
    </div>
</div>

<div class="search_box active">
    <table class="srch_tbl">
        <colgroup>
        <col width="10.9%">
        <col width="*">
        <col width="10.9%">
        <col width="*">
        <col width="10.9%">
        <col width="*">
        </colgroup>
        <tbody>
        <tr>
            <th>テンプレート名</th>
            <td>
                <input id="txtName" type="text" value="">
            </td>
            <th>FILE</th>
            <td>
                <input id="selectedFile" type="file" name="files[]"accept=".sjs, .xlsx, .xlsm, .ssjson, .json, .csv" />
            </td>
            <th>適用テンプレート</th>
            <td>
                <h2 id="txtTemplateName" style="color: blue; cursor: pointer;"></h2>
            </td>
        </tr>
        </tbody>
    </table>
</div>

<div class="content_box">
    <div class="sample-container">
        <div id="ss" class="sample-spreadsheets"></div>
    </div>
    <div class="open-options" style="display:none;"></div>
    <select id="saveFileType" style="display:none;">
        <option value="ssjson">SSJson</option>
    </select>
    <div class="save-options" style="display:none;"></div>
</div>


<style>
body {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.content_box {
    height: calc(100vh - 360px);
}
.container.full_screen_mode.active .content_box {
    height: calc(100% - 117px);
}

.sample-tutorial {
    position: relative;
    height: 100%;
    overflow: hidden;
}

.sample-container {
    height: 100%;
}

.sample-spreadsheets {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

#statusBar {
    bottom: 0;
    height: 25px;
    width: 100%;
    position: relative;
}

.options-container {
    float: right;
    width: 280px;
    height: 100%;
    box-sizing: border-box;
    background: #fbfbfb;
    overflow: auto;
}

.sample-options {
    z-index: 1000;
}

.inputContainer {
    width: 100%;
    height: auto;
    border: 1px solid #eee;
    padding: 6px 12px;
    margin-bottom: 10px;
    box-sizing: border-box;
}

.settingButton {
    color: #fff;
    background: #82bc00;
    outline: 0;
    line-height: 1.5715;
    position: relative;
    display: inline-block;
    font-weight: 400;
    white-space: nowrap;
    text-align: center;
    height: 32px;
    padding: 4px 15px;
    font-size: 14px;
    border-radius: 2px;
    user-select: none;
    cursor: pointer;
    border: 1px solid #82bc00;
    box-sizing: border-box;
    margin-bottom: 10px;
    margin-top: 10px;
}

.settingButton:hover {
    color: #fff;
    border-color: #88b031;
    background: #88b031;
}

.options-title {
    font-weight: bold;
    margin: 4px 2px;
}

#saveFileType {
    width: 120px;
    height: 31px;
}

.open-options .item {
    margin: 5px 0px;
    display: flex;
}
.save-options .item {
    margin: 5px 0px;
    display: flex;
}

label {
    margin-left: 3px;
}

.gc-edit-select .spinner-input {
	height: auto;
}

</style>
